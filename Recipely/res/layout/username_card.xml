<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/colorBorder"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="#FF8A6D" />

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/colorBorder"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/colorBorder"
            android:ems="10"
            android:hint="Username"
            android:background="@drawable/edittext_themed" >
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1" >

        <ImageView
            android:id="@+id/colorBorder2"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="#FF8A6D" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/colorBorder2"
            android:ems="10"
            android:hint="Password"
            android:background="@drawable/edittext_themed"
            android:inputType="textPassword"/>
    </RelativeLayout>

</RelativeLayout>